{
  "name": "node-skeleton",
  "version": "0.0.0",
  "private": true,
  "scripts": {
    "start": "node ./bin/www",
    "start:dev": "nodemon ./bin/www",
    "test": "jest --coverage",
    "lint": "eslint ./",
    "lint:fix": "eslint ./ --fix",
    "prettier": "npx prettier --write ./",
    "prepare": "husky install",
    "db:seed": "node ./seeders/index.js"
  },
  "jest": {
    "coverageReporters": [
      "html"
    ]
  },
  "dependencies": {
    "bcryptjs": "^2.4.3",
    "body-parser": "^1.19.0",
    "cookie-parser": "~1.4.4",
    "cors": "^2.8.5",
    "debug": "~2.6.9",
    "dotenv": "^10.0.0",
    "ejs": "^3.1.8",
    "express": "~4.16.1",
    "express-fileupload": "^1.5.1",
    "joi": "^17.4.2",
    "jsonwebtoken": "^8.5.1",
    "moment": "^2.29.1",
    "mongoose": "^6.0.11",
    "morgan": "~1.9.1",
    "nodemailer": "^6.9.16",
    "swagger-ui-express": "^4.3.0",
    "uuid": "^8.3.2",
    "winston": "^3.4.0",
    "winston-daily-rotate-file": "^4.5.5",
    "yamljs": "^0.3.0"
  },
  "devDependencies": {
    "eslint": "^8.16.0",
    "eslint-config-prettier": "^8.5.0",
    "eslint-config-standard": "^17.0.0",
    "eslint-plugin-prettier": "^4.2.1",
    "faker": "^5.5.3",
    "husky": "^8.0.1",
    "jest": "^27.3.1",
    "lint-staged": "^13.0.0",
    "nodemon": "^2.0.18",
    "prettier": "2.7.1",
    "supertest": "^6.1.6"
  },
  "lint-staged": {
    "*.js": "eslint --cache --fix",
    "*.{js,css,md,yaml}": "prettier --write"
  }
}
